  units = flag
  dimensions = ()
  type = integer
  intent = in
[do_cosp]
  standard_name = flag_for_cosp_diagnostics
  long_name = flag for cosp diagnostics
  units = flag
  dimensions =  ()
  type = logical
  intent = in
[do_cosp_isccp]
